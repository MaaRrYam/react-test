{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/utils/IconsHelper.tsx", "src/components/Inputs/Dropdown.tsx"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/screens/*": ["screens/*"],
      "@/components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@/constants/*": ["constants/*"],
      "@/utils/*": ["utils/*"],
      "@/assets/*": ["assets/*"],
      "@/interfaces/*": ["interfaces/*"],
      "@/styles/*": ["styles/*"],
      "@/types/*": ["types/*"],
      "@/navigation/*": ["navigation/*"],
      "@/services/*": ["services/*"],
      "@/store/*": ["store/*"]
    }
  }
}
